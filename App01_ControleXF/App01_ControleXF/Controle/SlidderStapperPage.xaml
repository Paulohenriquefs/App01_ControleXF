<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controle.SlidderStapperPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider
                Minimum="0"
                Maximum="100"
                Value="20"
                
                ValueChanged="ActionValorMudou"
                />

            <Label x:Name="reult"/>

            <Stepper
                Minimum="0"
                Maximum="10"
                Increment="1"
                ValueChanged="ActionValorMudouStepper"
                Value="4"
                />

            <Label x:Name="stepperResult"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>